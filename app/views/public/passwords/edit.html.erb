<section class="inner">
  <h2 class="section-ttl">パスワード変更</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "layouts/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <table class="customer_info customer_form">

      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>

      <tbody>
        <tr>
          <td><%= f.label :password, "新しいパスワード(#{@minimum_password_length}文字以上)" %></td>
          <td colspan="2"><%= f.password_field :password, autofocus: true, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td colspan="2"><%= f.submit "パスワードを変更する" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</section>
