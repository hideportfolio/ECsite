

<div class="row"style="margin-top: 30px;">
	<div class="col-xs-1"></div>
	<h3 class="col-xs-7" style="font-weight: bold;" >商品一覧画面</h3>
	<div class="col-xs-2" style="text-align: right; margin-top: 20px;" >
		<%=link_to new_admin_item_path do %>
		<i class="fa fa-plus-circle fa-2x"></i>
		<% end %>
	</div>
</div>




<div class="row">
	<div class="col-xs-2"></div>

	<div class="col-xs-8">
	<table class="table">

		<tr class="active">
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
		<% @items.each do |item| %>

		<tr>
			<td><%= item.id %></td>
			<td><%= link_to admin_item_path(item.id) do%>
				<%= item.name %>
				<% end %>
			</td>
			<td><%= item.price_before_tax %></td>
			<td><%= item.genre.name %></td>
			<td>
				<%= if [true].include?(item.is_sale)
					 status = "販売中"
				    else
					 status = "販売停止中"
				    end %>

			</td>
		</tr>
		<% end %>
	</table>
	<%= paginate @items, class: "paginate" %>
	</div>
</div>





