

<div class="row" style="padding-top: 100px;">
  <div class="col-xs-3"></div>
  <div class="col-xs-3"><h4 style="background-color: #DDDDDD; text-align: center;">会員の方はこちらからログイン</h4></div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row" style="height: 30px; margin-bottom: 20px;">
  <div class="col-xs-3" ></div>
  <div class="col-xs-2" style="text-align: right; line-height: 30px; font-size: 15px;">メールアドレス</div>
  <div class="col-xs-5"  >
    <%= f.email_field  :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>
</div>

<div class="row" style="margin-bottom: 20px;">
  <div class="col-xs-3" ></div>
  <div class="col-xs-2" style="text-align: right; line-height: 30px; font-size: 15px;">パスワード</div>
  <div class="col-xs-5">
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

</div>

<div class="row"  style="margin-bottom: 50px;">
    <div class="col-xs-5"></div>
  <div class="col-xs-1" >
    <%= f.submit "ログイン" %>
  </div>
  <div class="col-xs-3" style="text-decoration: underline; text-align: center;">
     <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
  </div>
</div>


<div class="row">
   <div class="col-xs-3"></div>
   <div class="col-xs-2">
    <h4 style="background-color: #DDDDDD; text-align: center;">登録がお済みでない方</h4>
  </div>
</div>
<div class="row" style="margin-bottom: 150px;">
  <div class="col-xs-4"></div>
  <div class="col-xs-1" style="text-decoration: underline; text-align: right;">
        <%= link_to "こちら", new_registration_path(resource_name) %>
  </div>
  <div class="col-xs-7" style="text-align: left;">
    <%= "から新規登録を行ってください。" %>
  </div>

</div>


<% end %>






