<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/8899e39315.js" crossorigin="anonymous"></script>
  </head>
  </head>

  <body>
    <div class="container" style="border: solid; width: 95%; margin-top: 10px;">
      <div class="row" style="border-bottom: solid; height: 100px;">
        <div class="col-sm-1"></div>
          <dir class="border">
            <div class="col-sm-2" style="border: solid; height: 70px; margin-top: 15px;"><h1 style="text-align: center; line-height: 70px; margin: 0;
              padding: 0;">LOGO</h1></div>

         <nav class="col-xs-8">
          <ul class="nav navbar-nav navbar-right">
            <% if admin_signed_in? %>
            <li><%= link_to '商品登録', new_admin_item_path, class: 'glyphicon ' %></li>
            <li><%= link_to '商品一覧', admin_items_path, class: 'glyphicon ' %></li>
            <li><%= link_to '会員一覧', admin_end_users_path, class: 'glyphicon ' %></li>
            <li><%= link_to '注文履歴一覧', admin_items_path, class: 'glyphicon ' %></li>
            <li><%= link_to 'ジャンル管理', admin_genres_path, class: 'glyphicon ' %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>

            <% elsif end_user_signed_in? %>
              <li><%= link_to 'マイページ', end_user_path, class: 'glyphicon glyphicon-home home' %></li>
              <li><%= link_to 'ログアウト', destroy_end_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
              <li><%= link_to 'カート一覧', end_user_path, class: 'glyphicon ' %></li>
            <% else %>
              <% if current_page?(new_end_user_session_path) || current_page?(new_end_user_registration_path) %>
                <li><%= link_to 'サインアップ', new_end_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
              <li><%= link_to 'ログイン', new_end_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
              <% end %>
            <% end %>

          </ul>
        </nav>

          </dir>
      </div>
        <%= yield %>
      <div class="row" style="border-top: solid; height: 90px;"></div>
    </div>
  </body>
</html>
